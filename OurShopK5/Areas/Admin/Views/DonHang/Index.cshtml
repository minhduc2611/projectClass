@model IEnumerable<OurShopK5.DataModels.DonHang>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form>
    <fieldset class="form-inline">
        <legend>Tim Kiem Hoa Don </legend>
        <div class="form-group">
            <label>
                Khach Hang :
            </label>
            <input class="form-control" name="KhachHang" value="@ViewBag.KhachHang" />
        </div>
        <div class="form-group">
            <label>
                Tu Ngay :
            </label>
            <input id="txtTuNgay" class="form-control" name="TuNgay" value="@{ViewBag.TuNgay.ToString("MM/dd/yyyy");}" />
        </div>
        <div class="form-group">
            <label>
                Den Ngay :
            </label>
            <input id="txtDenNgay" class="form-control" name="DenNgay" value="@{ViewBag.DenNgay.ToString("MM/dd/yyyy");}" />
        </div>
        <button class="btn btn-dark "> Loc Hoa Don </button>

    </fieldset>
</form>

<script>
    $(function () {
        $('#txtTuNgay').datepicker({
            uiLibrary: 'bootstrap4'
        });
        $('#txtDenNgay').datepicker({
            uiLibrary: 'bootstrap4'
        });
    });
</script>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NgayDatHang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThaiDonHang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TongTien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KhachHang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NguoiNhan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChiGiaoHang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.NgayDatHang.ToString("dd/MM/yyyy HH:mm:ss")
                </td>
                <td>
                    @item.TrangThaiDonHang.ToString()
                </td>
                <td>
                    @item.TongTien.ToString("#,##0")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KhachHang.MaKh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NguoiNhan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChiGiaoHang)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
